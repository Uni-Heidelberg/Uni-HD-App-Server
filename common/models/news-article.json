{
    "name": "NewsArticle",
    "base": "PersistedModel",
    "properties": {
        "title": {
            "type": "string",
            "required": true,
            "null": false
        },
        "date": {
            "type": "date",
            "required": true,
            "null": false
        },
        "abstract": {
            "type": "string",
            "required": true,
            "null": false,
            "length": 2000
        },
        "imageMetaData": {
            "type": "object"
        },
        "url": {
            "type": "string",
            "required": true,
            "null": false
        },
        "urlHash": {
            "type": "string",
            "required": true,
            "index": {
                "kind": "unique"
            },
            "null": false,
            "length": 200
        }
    },
    "hidden": ["imageMetaData"],
    "validations": [],
    "relations": {
        "source": {
            "type": "belongsTo",
            "model": "NewsSource",
            "foreignKey": "sourceId"
        }
    },
    "acls": [
        {
            "accessType": "WRITE",
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "DENY"
        },
        {
            "accessType": "EXECUTE",
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "DENY"
        },
        {
            "accessType": "EXECUTE",
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "ALLOW",
            "property": "__get__source"
        }
    ],
    "methods": [],
    "http": {
        "path": "news/articles"
    }
}
